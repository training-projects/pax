.main-footer
  padding-top: 1em
  padding-bottom: 1em
  color: #fff
  text-align: center
  background-color: color_blue

  > .links-wrapper
    margin-top: 1em
    margin-bottom: 2.5em
    text-align: left
    /* @media 1024px */
    @media (min-width: 1024px)
      width: 70%
      @extend .centralized

    > .links-list
      &:not(:last-child)
        margin-bottom: 1em

      /* @media 1024px */
      @media (min-width: 1024px)
        display: inline-block
        width: calc(100% / 4 - 1em)

        &:first-child
          margin-left: 2em

      > .item > .link
        set_font-size(14px)
        line-height: 1.5
        color: #fff

  > .whatever
    set_font-weight(light)
